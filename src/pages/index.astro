---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { cvData } from '../data/cv.js'; // Import your data
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main class="max-w-3xl mx-auto px-4 py-12">
            <section class="mb-16">
                <h1 class="text-4xl font-bold text-gray-900 mb-2">{cvData.name}</h1>
                <p class="text-xl text-blue-700 font-medium mb-6">{cvData.tagline}</p>
                <p class="text-gray-700 leading-relaxed text-lg">
                    I am a master student at <strong>EPFL</strong>, specialized in <strong>Biological Data Science</strong>. 
                    I aim to integrate my knowledge in oncology or neuroscience with deep learning to enhance biomedical research. 
                    Currently working on virtual staining from Raman spectroscopy images at the <strong>University of Cambridge</strong>.
                </p>
            </section>

            <section class="mb-16">
                <h2 class="text-2xl font-bold border-b-2 border-blue-100 pb-2 mb-8">Current Activity</h2>
                {cvData.experience.map(item => (
                    <div class="mb-10">
                        <div class="flex justify-between items-baseline">
                            <h3 class="text-lg font-bold text-gray-800">{item.title}</h3>
                            <span class="text-sm text-gray-500 font-mono">{item.date}</span>
                        </div>
                        <p class="text-blue-600 font-medium mb-2">{item.company}</p>
                        <p class="text-gray-600 leading-snug">{item.description}</p>
                    </div>
                ))}
            </section>

            <section class="bg-slate-50 p-8 rounded-2xl mb-16">
                <h2 class="text-2xl font-bold mb-4">Selected Publication</h2>
                <p class="italic text-gray-800">
                    "PhytClust: efficient and optimal node clustering in phylogenetic trees."
                </p>
                <p class="text-sm text-gray-500 mt-2">Ganesan, K., Billard, E., et al. (2025)</p>
            </section>
        </main>
        <Footer />
    </body>
</html>