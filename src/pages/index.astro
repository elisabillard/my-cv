---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { cvData } from '../data/cv.js';
---
<html lang="en">
<head><BaseHead title="Elisa Billard" description="PhD Candidate Portfolio" /></head>
<body class="bg-white">
  <Header />
  <main class="max-w-3xl mx-auto px-6 py-12">
    
    <div class="flex flex-col md:flex-row items-center md:items-start gap-10 mb-16">
      <div class="shrink-0">
        <img 
          src="/profile.jpg" 
          alt="Elisa Billard" 
          class="w-32 h-32 md:w-44 md:h-44 rounded-xl object-cover border"
        />
      </div>

      <div class="text-center md:text-left flex-1">
        <h1 class="mb-1">{cvData.name}</h1>
        <p class="text-meta text-blue-600 mb-6" style="font-size: 0.85rem;">{cvData.tagline}</p>
        
        <div class="space-y-4 text-slate-600 leading-relaxed text-[16px]">
          <p>
            I am a Master’s student in <strong>Life Science Engineering at EPFL</strong>, specializing in Biological Data Science. 
            Currently, I am conducting my research at the <strong>University of Cambridge</strong> within Pietro Liò’s Computer Lab.
          </p>
          
          <p>
            I am actively seeking a <strong>PhD position</strong> for 2026 to develop scalable computational tools for complex omics and cancer diagnostics.
          </p>
        </div>
      </div>
    </div>

    <section class="mb-12">
      <h2 class="mb-6">Current Research</h2>
      
      <div class="relative flex items-center gap-6 pl-6 border-l-2 border-slate-100 bg-slate-50 p-6 rounded-r-xl group">
        
        <div class="shrink-0 hidden sm:block">
          <div class="w-28 h-28 bg-white rounded-lg border border-slate-100 p-3 flex items-center justify-center shadow-sm">
            <img 
              src="/logos/secondary-logo-stacked.png" 
              alt="University of Cambridge" 
              class="max-w-full max-h-full object-contain" 
            />
          </div>
        </div>

        <div class="flex-1">
          <span class="text-meta text-blue-600">Master Thesis | Cambridge</span>
          <p class="text-slate-600 leading-relaxed text-[16px] mt-2">
            {cvData.thesis}
          </p>
        </div>
      </div>
    </section>

    <div class="flex flex-col sm:flex-row justify-center md:justify-start items-center gap-4">
      <a 
        href="mailto:elisabillard1905@gmail.com" 
        class="w-full sm:w-auto text-center border-2 border-slate-200 text-slate-700 px-8 py-3 rounded-full font-bold hover:bg-slate-50 hover:border-slate-300 hover:-translate-y-1 transition-all duration-300 no-underline"
      >
        Contact Me
      </a>
      
      <a 
        href="/CV_Elisa_Billard_Feb_2026.pdf" 
        class="w-full sm:w-auto text-center border-2 border-slate-200 text-slate-700 px-8 py-3 rounded-full font-bold hover:bg-slate-50 hover:border-slate-300 hover:-translate-y-1 transition-all duration-300 no-underline"
      >
        Download CV
      </a>
    </div>

  </main>
  <Footer />
</body>
</html>