<style>
    header {
        margin: 0;
        padding: 0 1em;
        background: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        position: sticky;
        top: 0;
        z-index: 10;
    }
    h2 {
        margin: 0;
        font-size: 1.2em;
    }
    h2 a {
        color: #1e293b; /* Slate-800 */
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 960px;
        margin: 0 auto;
    }
    .internal-links {
        display: flex;
        gap: 10px;
    }
    nav a {
        padding: 1.5em 0.5em;
        color: #64748b; /* Slate-500 */
        border-bottom: 4px solid transparent;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
    }
    nav a.active {
        color: #2563eb; /* Blue-600 */
        border-bottom-color: #2563eb;
    }
    nav a:hover {
        color: #2563eb;
    }
    .social-links {
        display: flex;
        gap: 1em;
    }
    @media (max-width: 720px) {
        .social-links {
            display: none;
        }
        .internal-links {
            gap: 0;
        }
    }
</style>