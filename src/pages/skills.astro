---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { cvData } from '../data/cv.js';
---

<html lang="en">
<head>
    <BaseHead 
        title="Skills | Elisa Billard" 
        description="Technical stack and language proficiency in Biological Data Science." 
    />
</head>
<body class="bg-white">
    <Header />
    <main class="max-w-3xl mx-auto px-6 py-12">
        
        <section class="mb-16">
            <h2 class="mb-8">Programming & Dev</h2>
            <div class="relative pl-6 border-l-2 border-slate-100 space-y-4">
                <div class="flex flex-wrap gap-2">
                    {cvData.skills.programming.map((skill) => (
                        <span class="px-3 py-1 bg-slate-50 border border-slate-200 rounded text-meta lowercase text-slate-600 hover:border-blue-400 transition-colors">
                            {skill}
                        </span>
                    ))}
                </div>
            </div>
        </section>

        <section class="mb-16">
            <h2 class="mb-8">Languages</h2>
            <div class="relative pl-6 border-l-2 border-slate-100">
                <div class="flex flex-wrap gap-10">
                    {cvData.skills.languages.map((lang) => (
                        <div class="group">
                            <p class="text-sm font-bold text-slate-800 group-hover:text-blue-600 transition-colors">{lang.split(' ')[0]}</p>
                            <p class="text-meta">{lang.split(' ')[1]}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section>
            <h2 class="mb-8">Beyond Research</h2>
            <div class="space-y-6 mb-8">
                <div class="relative pl-6 border-l-2 border-slate-100">
                    <div class="flex justify-between items-baseline">
                        <h3 class="text-sm font-bold text-slate-800">Student Assistant, Applied Data Analysis (EPFL)</h3>
                        <span class="text-meta">2024 — 2025</span>
                    </div>
                </div>

                <div class="relative pl-6 border-l-2 border-slate-100">
                    <div class="flex justify-between items-baseline">
                        <h3 class="text-sm font-bold text-slate-800">English and Math Teacher, GPA</h3>
                        <span class="text-meta">2022 — 2023</span>
                    </div>
                </div>

                <div class="relative pl-6 border-l-2 border-slate-100">
                    <div class="flex justify-between items-baseline">
                        <h3 class="text-sm font-bold text-slate-800">Active Member, Polyquity</h3>
                        <span class="text-meta">2021 — 2022</span>
                    </div>
                </div>
            </div>
        </section>

    </main>
    <Footer />
</body>
</html>