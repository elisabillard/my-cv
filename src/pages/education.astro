---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { cvData } from '../data/cv.js';
---
<html lang="en">
<head>
  <BaseHead title="Education | Elisa Billard" description="Academic background." />
</head>
<body class="bg-white">
  <Header />
  <main class="max-w-3xl mx-auto px-6 py-12">
    <h1 class="mb-10">Education</h1>
    
    <div class="relative space-y-12 before:absolute before:inset-0 before:ml-1 before:-translate-x-px before:h-full before:w-0.5 before:bg-gradient-to-b before:from-slate-200 before:via-slate-200 before:to-transparent">
      {cvData.education.map(edu => (
        <div class="relative pl-10 group">
          <div class="absolute left-0 top-1 w-2.5 h-2.5 bg-blue-500 rounded-full border-2 border-white ring-2 ring-slate-50 shadow-sm z-10"></div>
          
          <div class="flex items-start gap-4">
            {edu.logo && (
              <div class="shrink-0 w-14 h-14 rounded bg-white border border-slate-100 p-1 flex items-center justify-center shadow-sm overflow-hidden">
                <img src={edu.logo} alt={edu.school} class="max-w-full max-h-full object-contain" />
              </div>
            )}

            <div class="flex-1">
              <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline gap-1 mb-1">
                <h3 class="leading-tight">{edu.degree}</h3>
                <span class="text-meta">{edu.date}</span>
              </div>
              
              <div class="text-sm font-semibold text-blue-600 mb-1 uppercase tracking-tight">
                {edu.gpa && <span class="text-slate-900 font-bold ml-2">Grade: {edu.gpa}</span>}
              </div>
              
              {edu.specialization && (
                <p class="text-sm text-slate-700 font-medium mb-3 italic">{edu.specialization}</p>
              )}

              {/* Using solid bg-slate-50 to ensure Master and Bachelor boxes match perfectly */}
              {(edu.computational || edu.biology) && (
                <div class="grid grid-cols-1 gap-4 mt-4">
                  {edu.computational && (
                    <div class="bg-slate-50 p-3 rounded-lg border border-slate-100">
                      <strong class="text-meta text-blue-600 mb-2 block">Engineering & Programming</strong>
                      <div class="flex flex-wrap gap-x-3 gap-y-1">
                        {edu.computational.map(course => (
                          <span class="text-[11px] text-slate-600">• {course}</span>
                        ))}
                      </div>
                    </div>
                  )}

                  {edu.biology && (
                    <div class="bg-slate-50 p-3 rounded-lg border border-slate-100">
                      <strong class="text-meta text-blue-600 mb-2 block">Life Sciences</strong>
                      <div class="flex flex-wrap gap-x-3 gap-y-1">
                        {edu.biology.map(course => (
                          <span class="text-[11px] text-slate-600">• {course}</span>
                        ))}
                      </div>
                    </div>
                  )}
                </div>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </main>
  <Footer />
</body>
</html>